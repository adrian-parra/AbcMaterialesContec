<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"

        android:orientation="vertical"

        app:cardCornerRadius="10dp"
        android:animateLayoutChanges="true"

        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"


        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"

        android:layout_margin="@dimen/margin"
        android:orientation="vertical"


       >

        <!--no material-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtViewMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_subtitle"
                android:textStyle="bold"
                android:textColor="@color/principal"
                android:layout_weight="1"
                android:text="18104924"/>

            <!--LY COMO CONTENEDOR PARA CODIGO DE MATERIAL
                A 4 DIJITOS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtViewMaterialShort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_subtitle"
                    android:textStyle="bold"
                    android:textColor="@color/principal"

                    android:background="@color/gray"
                    android:paddingRight="@dimen/padding"
                    android:paddingLeft="@dimen/padding"
                    android:text="4924"/>
            </LinearLayout>


        </LinearLayout>

        <!--TIENDITA Y ALMACEN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_subtitle"
                    android:textColor="@color/gray"
                    android:textAllCaps="true"
                    android:text="Tiendita"/>
                <TextView
                    android:id="@+id/txtViewTiendita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_descripcion"
                    android:textStyle="bold"
                    android:textColor="@color/principal"
                    android:background="@color/gray"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:textAllCaps="true"
                    android:text="27b1a"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_subtitle"
                    android:textColor="@color/gray"
                    android:textAllCaps="true"
                    android:text="RACK"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/txtViewAlmacen"
                    android:textAllCaps="true"
                    android:textSize="@dimen/size_descripcion"
                    android:textStyle="bold"
                    android:textColor="@color/principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@color/gray"
                    android:paddingRight="@dimen/padding"
                    android:paddingLeft="@dimen/padding"
                    android:text="27b1"/>
            </LinearLayout>
        </LinearLayout>

        <!--DESCRIPCION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_subtitle"
                android:textColor="@color/gray"
                android:textAllCaps="true"
                android:text="Descripcion"/>
            <TextView
                android:id="@+id/txtViewDescripcion"
                android:textSize="@dimen/size_descripcion"
                android:textStyle="bold"
                android:textColor="@color/principal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="other"/>
        </LinearLayout>


        <!--ly BTNs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_float_agregar_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_pedido"
                app:backgroundTint="@color/white"


                app:fabCustomSize="@dimen/fab_size_mini"

                app:rippleColor="@color/principal"

                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_float_editar_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:rippleColor="@color/principal"

                app:backgroundTint="@color/white"
                android:src="@drawable/ic_editar_material"

                app:fabCustomSize="@dimen/fab_size_mini"

                />
        </LinearLayout>




    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>